import { VerticalBox, Button } from "std-widgets.slint";

export component MainWindow inherits Window {
    width: 400px;
    height: 300px;
    background: #f5f5f5;
    title: "RVault - Secure Password Manager";

    in-out property <string> status: "Enter your master password to unlock the vault.";
    in-out property <string> password: "";

    callback unlock(string);

    VerticalBox {
        padding: 20px;
        spacing: 15px;
        alignment: center;

        Text {
            text: "üîê RVault";
            font-size: 24px;
            font-weight: 700;
            color: #2c3e50;
            horizontal-alignment: center;
        }

        Text {
            text: "Unlock Vault";
            font-size: 16px;
            color: #34495e;
            horizontal-alignment: center;
        }

        TextInput {
            text <=> password;
            font-size: 14px;
            width: 100%;
        }

        Button {
            text: "Unlock";
            clicked => {
                unlock(password);
            }
            width: 100%;
        }

        Text {
            text: status;
            font-size: 12px;
            color: status == "Vault unlocked successfully!" ? #27ae60 : #e74c3c;
            horizontal-alignment: center;
            wrap: word-wrap;
        }
    }
}
